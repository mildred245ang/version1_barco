<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tpequenyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="PequeÃ±o"
        app:layout_constraintBaseline_toBaselineOf="@+id/tmediano"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tmediano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Mediano"
        app:layout_constraintStart_toStartOf="@+id/tpequenyo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tgrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:text="Grande"
        app:layout_constraintBaseline_toBaselineOf="@+id/tpequenyo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tpequenyo" />

</androidx.constraintlayout.widget.ConstraintLayout>